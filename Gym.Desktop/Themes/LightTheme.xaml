<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="PrimaryBackground" Color="#fff"></SolidColorBrush>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#d49494"></SolidColorBrush>
    
    <SolidColorBrush x:Key="PrimaryBorderColor" Color="#db9e9e"></SolidColorBrush>

    <SolidColorBrush x:Key="PrimaryTextColor" Color="#65647C"></SolidColorBrush>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#272936"></SolidColorBrush>

    <SolidColorBrush x:Key="PrimaryIconColor" Color="#cb0404"></SolidColorBrush>

    <SolidColorBrush x:Key="PrimaryTextBoxColor" Color="#d49494"></SolidColorBrush>

    <SolidColorBrush x:Key="PrimaryDialogBackground" Color="LightBlue"></SolidColorBrush>

    <!--Specific for Packages Icons Color-->
    <SolidColorBrush x:Key="PrimaryPackageIconColor" Color="#cb0404"></SolidColorBrush>

</ResourceDictionary>